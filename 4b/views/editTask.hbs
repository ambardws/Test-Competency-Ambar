{{>header}}
{{>navbar}}
{{#if isLogin}}
<div class="container">
  <div class="row">
    <div class="col">
      <div class="form-signup-login">
            <div class="row mt-3">
                <form action="/edit-task" method="POST">
                {{#each editTask}}
                  <div class="col-md-12">
                     <input type="hidden" value="{{this.id}}" name="id">
                     <input type="text" value="{{this.name}}" class="form-control" name="task" required>
                  </div>
                  <div class="col-md-2 mt-2">
                      <button type="submit" class="btn btn-secondary">Save</button>
                  </div>
                  {{/each}}
                </form>
            </div>
        </form> 
      </div>
    </div>
  </div>
  {{/if}}
</div>


{{>footer}}